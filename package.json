{
  "name": "otel-mcp",
  "version": "0.1.0",
  "description": "OpenTelemetry collector that exposes traces to AI coding agents via MCP",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "otel-mcp": "dist/index.js"
  },
  "scripts": {
    "build": "bun build src/index.ts --outdir dist --target node",
    "dev": "bun run src/index.ts",
    "test": "bun test",
    "typecheck": "tsc --noEmit",
    "format": "biome format --write .",
    "lint": "biome lint .",
    "check": "biome check --write ."
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.10",
    "@types/bun": "^1.0.0",
    "typescript": "^5.0.0"
  },
  "keywords": [
    "opentelemetry",
    "otel",
    "mcp",
    "traces",
    "observability",
    "ai",
    "claude"
  ],
  "license": "MIT"
}
